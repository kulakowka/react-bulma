    "predeploy": "npm run styleguide:build",
    "deploy": "gh-pages -d styleguide",
    "build": "babel src -d lib && scp ./src/components/index.d.ts ./lib/components/index.d.ts",
    "lint:js": "eslint src/components/**/*.js",
